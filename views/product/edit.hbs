<section id="viewAddhotel">
    <h2>Edit existing hotel</h2>
    <form id="formAddhotel" action="/products/edit/{{product._id}}" method="POST">
        <label for="hotel">Hotel name:</label>
        <input type="text" id="hotel" name="name" value="{{product.name}}">
        <label for="city">City:</label>
        <input type="text" id="city" name="city" value="{{product.city}}">
        <label for="free-rooms">Free rooms:</label>
        <input type="number" id="free-rooms" name="rooms" value="{{product.rooms}}">
        <label for="imgUrl">Image:</label>
        <input type="text" id="imgUrl" name="imageUrl"
            value="{{product.imageUrl}}">

        <input type="submit" class="create" value="Edit">
    </form>
</section>